{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Run src/app.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "src/app.py",
                "--server.port",
                "8501",
                "--server.enableCORS",
                "false",
                "--server.enableXsrfProtection",
                "false"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
